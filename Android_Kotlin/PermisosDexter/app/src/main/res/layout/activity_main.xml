<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity">

    <Button
            android:text="@string/permission_button_camera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/buttonCamera"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textViewCamera"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonCamera" android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>

    <Button
            android:text="@string/permission_button_contacts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/buttonContacts"
            style="@style/Widget.AppCompat.Button.Colored"
            app:layout_constraintHorizontal_bias="0.533" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewCamera" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textViewContacts"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonContacts" android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>
    <Button
            android:text="@string/permission_button_audio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/buttonAudio"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewContacts" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textViewAudio" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonAudio" android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>
    <Button
            android:text="@string/permission_button_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/buttonAll"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>